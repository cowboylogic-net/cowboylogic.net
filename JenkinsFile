pipeline {
  agent {
    node {
      label 'built-in'
    }
  }

  tools {
    nodejs 'node24'
  }

  environment {
    CODEBASE_SERVER_DIR = 'server'
    CODEBASE_CLIENT_DIR = 'client'

    DEV_DEPLOY_SERVER_DIR = 'E:\\deploy\\dev\\server'
    DEV_DEPLOY_CLIENT_DIR = 'E:\\deploy\\dev\\client'
  }

  stages {
    stage('checkout scm') {
      steps {
        checkout scm
      }
    }

    stage('verify node env') {
      steps {
        bat 'node -v'
        bat 'npm -v'
      }
    }

    stage('server code to DEV deployment dest') {
      steps {
        bat """
          if not exist "${env.DEV_DEPLOY_SERVER_DIR}" (
            mkdir "${env.DEV_DEPLOY_SERVER_DIR}"
          )
          robocopy ${env.CODEBASE_SERVER_DIR} ${env.DEV_DEPLOY_SERVER_DIR} /MIR /NFL /NDL /NJH /NJS /NP
        """
      }
    }
	
	stage('Client code base replication to DEV deployment destination') {
      steps {
        bat """
          if not exist "${env.DEV_DEPLOY_CLIENT_DIR}" (
            mkdir "${env.DEV_DEPLOY_CLIENT_DIR}"
          )
          robocopy ${env.CODEBASE_CLIENT_DIR} ${env.DEV_DEPLOY_CLIENT_DIR} /MIR /NFL /NDL /NJH /NJS /NP
        """
      }
    }
  }
}
