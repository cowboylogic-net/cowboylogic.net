{
  "name": "cowboylogic-client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "helmet": "^8.1.0",
    "react-toastify": "^11.0.5",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^30.1.1",
    "babel-jest": "^30.1.1",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^30.1.1"
  }
}
